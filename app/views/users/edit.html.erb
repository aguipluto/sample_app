<% provide :title, 'Edit user' %>
<h1>Update your profile</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for @user do |f| %>
        <%= render 'shared/user_partial_form', f: f %>
        <%= f.submit "Save your changes", class: "btn btn-large btn-primary" %>
    <% end %>
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">Change</a>
  </div>
</div>
